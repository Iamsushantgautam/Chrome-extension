{
  "manifest_version": 3,
  "name": "Universal Website Text Copier",
  "version": "1.0",
  "description": "Copy all text including images canvas and selected areas",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["canvas-hook.js"],
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/tesseract.min.js",
        "ocr.js",
        "content.js"
      ]
    }
  ]
}
